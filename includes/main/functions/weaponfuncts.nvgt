spawn_bltdir(bullmode);
if(melee==false)
{
loadedammo-=1;
}
}
}
}
void spawn_bltdir(int bltmode)
{
bullmode=bltmode;
if(bltmode==0)
{
spawn_bullet(me.x, me.y, weprange, weprange2, wepdamage+(attack * 2), wepspeed, facing, weapontype, weapontype2);
}
if(bltmode==1)
{
spawn_bullet(me.x, me.y, weprange, weprange2, wepdamage+(attack * 2), wepspeed, "left", weapontype, weapontype2);
