{
spawn_bullet(me.x, me.y, weprange, weprange2, wepdamage+(attack * 2), wepspeed, "left", weapontype, weapontype2);
spawn_bullet(me.x, me.y, weprange, weprange2, wepdamage+(attack * 2), wepspeed, "right", weapontype, weapontype2);
spawn_bullet(me.x, me.y, weprange, weprange2, wepdamage+(attack * 2), wepspeed, "up", weapontype, weapontype2);
spawn_bullet(me.x, me.y, weprange, weprange2, wepdamage+(attack * 2), wepspeed, "down", weapontype, weapontype2);
}
