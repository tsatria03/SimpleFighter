cycle_inv(0);
else
cycle_inv(1);
}
if(key_repeating(KEY_RETURN) and shift_is_down() and usetimer.elapsed>=usetime)
{
usetimer.restart();
if (inv.get_keys().length()>0 and invpos<inv.get_size())
useitem(inv.get_keys()[invpos]);
else
speak("No item in focus.");
}
if(shift_is_down() and key_repeating(KEY_LBRACKET) and usetimer.elapsed>=usetime)
{
if (inv.get_keys().length() > 0 and invpos < inv.get_size())
{
string item = inv.get_keys()[invpos];
string[] healtype = find_directories("sounds/" + soundpack + "/equipments/items/unsorted/health/*");
string[] misktype = find_directories("sounds/" + soundpack + "/equipments/items/unsorted/other/*");
bool matched = false;
for (uint i = 0; i < healtype.length(); i++)
{
if (item == healtype[i])
{
drop_item(facing, "health", item);
give(item, -1);
usetimer.restart();
matched = true;
break;
}
}
if (!matched)
{
for (uint i = 0; i < misktype.length(); i++)
{
if (item == misktype[i])
{
drop_item(facing, "other", item);
give(item, -1);
usetimer.restart();
matched = true;
break;
}
}
}
if (!matched)
{
speak("Cannot drop this item.");
}
}
else
{
speak("No item in focus.");
}
}
